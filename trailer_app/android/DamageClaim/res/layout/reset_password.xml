<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/all_screens">

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/all_screens"
    android:orientation="vertical"
    android:layout_gravity="center_vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/changepassword1"
        android:textColor="@drawable/all_textviews"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reset_password_edittext_oldpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:hint="@string/oldpassword"
        android:inputType="textPassword"        
        android:textSize="20sp" />

    <EditText
        android:id="@+id/reset_password_edittext_newpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:hint="@string/newpassword"        
        android:inputType="textPassword"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/reset_password_edittext_confirmnewpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:hint="@string/confirmnewpassword"
        android:inputType="textPassword"        
        android:textSize="20sp" />

    <Button
        android:id="@+id/resetpassword_submit"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        android:text="@string/homepage_button_submit"        
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
</ScrollView>