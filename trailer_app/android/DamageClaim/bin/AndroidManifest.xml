<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gslab"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".damageclaim.Login"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".damageclaim.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <data
                    android:host="update_app_config.com"
                    android:scheme="http" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".damageclaim.HomePage"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".listviewdialog.ListViewDialog"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".damageclaim.ReportDamage"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".damageclaim.ReportNewDamage"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".damageclaim.DisplayDamageClaimImage"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".damageclaim.PreviouslyReportedDamagesInfo"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".damageclaim.PasswordReset"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".damageclaim.About"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>